# FinDoc AI Platform Environment Configuration

# Application Settings
ENVIRONMENT=development
APP_NAME=FinDoc AI
APP_VERSION=1.0.0
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://findoc_user:findoc_password@localhost:5432/findoc_ai
REDIS_URL=redis://localhost:6379

# NVIDIA HPC Settings
NVIDIA_GPU_ENABLED=true
NVIDIA_GPU_MEMORY_FRACTION=0.8
NVIDIA_MIXED_PRECISION=true

# Document Processing
MAX_FILE_SIZE=52428800
SUPPORTED_FORMATS=pdf,jpg,jpeg,png,tiff
OCR_LANGUAGES=spa,eng,por

# AI Models
MODEL_CACHE_DIR=./models
USE_GPU=true
BATCH_SIZE=32

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Vector Database
WEAVIATE_URL=http://localhost:8080
VECTOR_DIMENSION=768

# Stream Processing
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_DOCUMENTS=documents
KAFKA_TOPIC_ANALYTICS=analytics

# Regional Settings
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en,pt
TIMEZONE=America/Mexico_City

# File Storage
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed 